{
    "compilerOptions": {
        "strict": true,
        "sourceMap": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "dist",
        "esModuleInterop": true,
        "declaration": true,
        "jsx": "react",
        "baseUrl": ".",
        "skipLibCheck": true,
        "paths": {
            "@client/*": ["client/*"],
            "@reactivated": ["node_modules/_reactivated"],
            "@reactivated/*": ["node_modules/_reactivated/*"]
        }
    },
    "include": ["./**/*"],
    "exclude": ["node_modules", "dist/"]
}
