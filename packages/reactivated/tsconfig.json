{
    "compilerOptions": {
        "strict": true,
        "sourceMap": true,
        "module": "ES2022",
        "target": "ES2020",
        "moduleResolution": "node",
        "outDir": "dist",
        "esModuleInterop": true,
        "declaration": true,
        "jsx": "react",
        "baseUrl": ".",
        "noEmit": false,
        "skipLibCheck": true
    },
    "include": ["./**/*"],
    "exclude": ["node_modules", "dist/"]
}
