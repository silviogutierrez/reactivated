{
    "compilerOptions": {
        "outDir": "./dist/",
        "strict": true,
        "sourceMap": true,
        "noImplicitAny": true,
        // "noUnusedParameters": true,
        // "noUnusedLocals": true,
        "noImplicitThis": true,
        "module": "commonjs",
        "target": "es6",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowJs": true,
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "@client/*": ["client/*"],
            "@reactivated": ["node_modules/_reactivated"]
        }
    },
    "include": ["./client/**/*"]
}
